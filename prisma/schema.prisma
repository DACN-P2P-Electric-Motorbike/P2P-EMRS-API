// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ==========================================
// ENUMS
// ==========================================

enum UserRole {
  RENTER
  OWNER
  ADMIN
}

enum UserStatus {
  ACTIVE
  PENDING   // Waiting for KYC/Verification
  BLOCKED
}

// ==========================================
// USER MODEL
// ==========================================

model User {
  id            String      @id @default(uuid())
  email         String      @unique
  password      String      // Hashed with bcrypt
  fullName      String      @map("full_name")
  phone         String      @unique
  avatarUrl     String?     @map("avatar_url")
  
  // Role & Status
  role          UserRole    @default(RENTER)
  status        UserStatus  @default(ACTIVE)
  
  // Domain Specific Fields (Based on EERD)
  trustScore    Float       @default(100.0) @map("trust_score")
  idCardNum     String?     @unique @map("id_card_num") // KYC info - CCCD/CMND
  address       String?
  
  // Timestamps
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  @@index([email])
  @@index([phone])
  @@map("users")
}
